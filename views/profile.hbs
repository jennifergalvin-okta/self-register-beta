<div class="col-md-8 col-md-offset-2">

	<div class="panel panel-default">
		<div class="panel-heading">Request</div>
		<div class="panel-body">
			<form class="form-horizontal">

				<div class="form-group">
					<label for="issuer" class="col-sm-3 control-label">OpenID Provider (OP)</label>
					<div class="col-sm-9">
						<p id="issuer" class="form-control-static">
							<a href="{{user.issuer}}/.well-known/openid-configuration">{{user.issuer}}</a>
						</p>
					</div>
				</div>

				<div class="form-group">
					<label for="scope" class="col-sm-3 control-label">scope</label>
					<div class="col-sm-9">
						<p id="scope" class="form-control-static">{{params.scope}}</p>
					</div>
				</div>
				<div class="form-group">
					<label for="response_type" class="col-sm-3 control-label">response_type</label>
					<div class="col-sm-9">
						<p id="response_type" class="form-control-static">{{params.response_type}}</p>
					</div>
				</div>
				<div class="form-group">
					<label for="response_mode" class="col-sm-3 control-label">response_mode</label>
					<div class="col-sm-9">
						<p id="response_mode" class="form-control-static">{{params.response_mode}}</p>
					</div>
				</div>
			</form>
		</div>
	</div>


	<div class="panel panel-default">
		<div class="panel-heading">Claims</div>
		<div class="panel-body">
			<form class="form-horizontal">
				{{#each user.claims}}
					<div class="form-group">
					  <label for="{{@key}}" class="col-sm-3 control-label">{{@key}}</label>
					  <div class="col-sm-9">
							{{#ifArray this}}
								{{#each this}}
							    <p class="form-control-static">{{this}}</p>
								{{/each}}
							{{else}}
								<p class="form-control-static">{{this}}</p>
							{{/ifArray}}
					  </div>
					</div>
        {{/each}}
			</form>
		</div>
	</div>

	<div class="panel panel-default">
		<div class="panel-heading">UserInfo</div>
		<div class="panel-body">
			<form class="form-horizontal">
				{{#each user.userinfo}}
					<div class="form-group">
					  <label for="{{@key}}" class="col-sm-3 control-label">{{@key}}</label>
					  <div class="col-sm-9">
							{{#ifArray this}}
								{{#each this}}
							    <p class="form-control-static">{{this}}</p>
								{{/each}}
							{{else}}
								<p class="form-control-static">{{this}}</p>
							{{/ifArray}}
					  </div>
					</div>
        {{/each}}
			</form>
		</div>
	</div>

	<form class="form-horizontal">
		<div class="form-group">
			<div class="col-md-12 text-right">
				<a href="/logout" class="btn btn-primary input-xlarge">Sign-out</a>
				<a href="/login/force" class="btn btn-default input-xlarge">Sign-in again</a>
			</div>
		</div>
	</form>

</div>


